{% extends '@MMCProfileBundle/Profile/create.html.twig' %}

{% block body %}
    <div class="container">
        {{ parent() }}
        <hr style="border:solid 3px black">
        <h1 class="text-center alert alert-danger">Version de test</h1>
        <div class="container">
            <h1 class="text-center">Ajout d'un nouveau profil</h1>
            <div class="row d-flex justify-content-between">
                <div class="col-lg-6 col-lg-offset-3">
                    {{ form_start(formTest, {'attr': {'id': 'createProfileFormTest'}}) }}
                        <div class="form-group row {% if form.type.vars.errors|length > 0 %}has-error{% endif %}">
                            {{ form_label(formTest.type, null, {'label_attr': {'class': 'col-lg-4 col-form-label text-lg-right'}}) }}
                            <div class="col-lg-8">{{ form_widget(formTest.type, {'attr': {'class': 'form-control'}}) }}</div>
                            {{ form_errors(formTest.type) }}
                        </div>
                        <div class="row justify-content-center mt-4">
                            <button class="btn btn-primary d-block mx-auto col-lg-12" type="submit" role="button">Cr√©er
                            </button>
                        </div>
                    {{ form_end(formTest) }}
                </div>
            </div>
        </div>
{% endblock %}
