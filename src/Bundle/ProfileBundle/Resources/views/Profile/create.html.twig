{% extends 'MMCProfileBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} | {{ 'create.page_title'|trans({}, 'mmc_profile_bundle_messages') }}
{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="text-center">{{ 'create.new_profile'|trans({}, 'mmc_profile_bundle_messages') }}</h1>
        <div class="row d-flex justify-content-between">
            <div class="col-lg-6 col-lg-offset-3">
                {{ form_start(form, {'attr': {'id': 'createProfileForm'}}) }}
                <div class="form-group row {% if form.type.vars.errors|length > 0 %}has-error{% endif %}">
                    {{ form_label(form.type, null, {'label_attr': {'class': 'col-lg-4 col-form-label text-lg-right'}}) }}
                    <div class="col-lg-8">
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.type) }}
                </div>
                <div class="row justify-content-center mt-4">
                    <button class="btn btn-primary d-block mx-auto col-lg-12" type="submit" role="button">
                        {{ 'create.submit_button'|trans({}, 'mmc_profile_bundle_messages') }}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
